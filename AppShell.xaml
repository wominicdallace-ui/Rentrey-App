<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Rentrey.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Rentrey.Maui"
    Shell.TabBarIsVisible="True"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab
            Title="Home"
            Icon="homepage_nav.png">
            <ShellContent
                Route="HomePage"
                ContentTemplate="{DataTemplate local:HomePage}" />
        </Tab>

        <Tab
            Title="Account"
            Icon="profile_nav.png">
            <ShellContent
                Route="AccountPage"
                ContentTemplate="{DataTemplate local:AccountPage}" />
        </Tab>

        <Tab
            Title="Search"
            Icon="search_nav.png">
            <ShellContent
                Route="MapPage"
                ContentTemplate="{DataTemplate local:MapPage}" />
        </Tab>

        <Tab
            Title="Application"
            Icon="application_nav.png">
            <ShellContent
                Route="ApplicationPage"
                ContentTemplate="{DataTemplate local:ApplicationPage}" />
        </Tab>

        <Tab
            Title="Ratings"
            Icon="ratings_nav.png">
            <ShellContent
                Route="RatingsPage"
                ContentTemplate="{DataTemplate local:RatingsPage}" />
        </Tab>
    </TabBar>

    <!-- âœ… Other Pages Outside Tabs (for navigation only) -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage"
        Shell.NavBarIsVisible="False" />

    <ShellContent
        Title="Tenancy Application"
        ContentTemplate="{DataTemplate local:TenancyApplicationPage}"
        Route="TenancyApplicationPage" />
</Shell>
