<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Rentrey.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Rentrey.Maui"
    Shell.TabBarIsVisible="True">

    <TabBar Title="Home">

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:HomePage}"
            Route="HomePage"
            Icon="payment_nav.png"/>

        <ShellContent
            Title="Account"
            ContentTemplate="{DataTemplate local:AccountPage}"
            Route="AccountPageTemp"
            Icon="profile_nav.png"/>    

        <ShellContent
            Title="Search"
            ContentTemplate="{DataTemplate local:SearchPage}"
            Route="SearchPage"
            Icon="search_nav.png"/>

        <ShellContent
            Title="Application"
            ContentTemplate="{DataTemplate local:ApplicationPage}"
            Route="ApplicationPage"
            Icon="application_nav.png"/>

        <ShellContent
            Title="Ratings"
            ContentTemplate="{DataTemplate local:ApplicationPage}"
            Route="RatingsPage"
            Icon="ratings_nav.png"/>

    </TabBar>

</Shell>
