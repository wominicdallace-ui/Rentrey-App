<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rentrey.Maui.PropertyPage"
             BackgroundColor="#F5F5F5"
             Title="Property">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="15">

            <!-- Property Image -->
            <Frame CornerRadius="10" Padding="0" Margin="0,10,0,0">
                <Image Source="{Binding ImageSource}" Aspect="AspectFill" HeightRequest="250" />
            </Frame>

            <!-- Property Details and Chance of Success -->
            <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10" Padding="0,5">
                <Frame Grid.Column="0" CornerRadius="10" BackgroundColor="White" Padding="15">
                    <Label Text="{Binding Details}" FontSize="16" FontAttributes="Bold" TextColor="#333333" HorizontalOptions="Center" />
                </Frame>
                <Frame Grid.Column="1" CornerRadius="10" BackgroundColor="White" Padding="15">
                    <Label Text="{Binding Address}" FontSize="16" FontAttributes="Bold" TextColor="#333333" HorizontalOptions="Center" />
                </Frame>
            </Grid>

            <Frame CornerRadius="10" BackgroundColor="#E8F5E9" Padding="15" Margin="0,0,0,10">
                <Label Text="High Chance at Successful Application" FontSize="14" FontAttributes="Bold" TextColor="#2E7D32" HorizontalOptions="Center" />
            </Frame>

            <!-- Submit Section -->
            <Label Text="Submit Tenancy Application" FontSize="18" FontAttributes="Bold" TextColor="#333333" HorizontalOptions="Center" />
            <Frame CornerRadius="10" Padding="10" BackgroundColor="White" Margin="0,0,0,10">
                <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                    <Image Source="pdf_icon.png" HeightRequest="40" WidthRequest="40" VerticalOptions="Center" />
                    <Label Text="Submit Tenancy Application" FontSize="16" TextColor="#333333" VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Frame>

            <Button Text="Submit"
                    BackgroundColor="#FFA726"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="20"
                    FontAttributes="Bold"
                    Padding="15" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
