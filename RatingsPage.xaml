<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Rentrey.Maui"
             x:Class="Rentrey.Maui.RatingsPage"
             Title="Property Ratings"
             BackgroundColor="#F5F5F5">

    <Grid>
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="15" Padding="15">
                <Label Text="Property Ratings"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#333333"
                       Margin="0,10,0,0"/>

                <Button Text="Review a Property"
                        BackgroundColor="#007BFF"
                        TextColor="White"
                        CornerRadius="8"
                        Clicked="OnReviewButtonClicked"
                        Margin="0, 5, 0, 10" />

                <CollectionView ItemsSource="{Binding Ratings}"
                SelectionMode="None">

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="local:PropertyRating">
                            <Frame CornerRadius="10"
                   Padding="10"
                   Margin="0,5"
                   BackgroundColor="White">

                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:RatingsPage}}, Path=BindingContext.ViewRatingCommand}"
                        CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>

                                <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">

                                    <VerticalStackLayout Grid.Column="0" Spacing="5">
                                        <Label Text="{Binding PropertyAddress}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#333333"/>

                                        <HorizontalStackLayout Spacing="10">
                                            <Label Text="{Binding UserName, StringFormat='Reviewed by {0}'}" 
                                   FontSize="12" TextColor="#888888"/>
                                            <Label Text="{Binding ReviewDate, StringFormat='on {0:d}'}" 
                                   FontSize="12" TextColor="#888888"/>
                                        </HorizontalStackLayout>

                                        <Label Text="{Binding RatingText}"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#FFC107"/>

                                        <Label Text="{Binding ShortReview}"
                               FontSize="14"
                               TextColor="#333333"
                               Margin="0, 5, 0, 0"/>

                                    </VerticalStackLayout>

                                    <Button Grid.Column="1"
                            Text="Delete"
                            BackgroundColor="#D32F2F"
                            TextColor="White"
                            CornerRadius="8"
                            VerticalOptions="Center"
                            Padding="10, 5"
                            FontSize="12"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:RatingsPage}}, Path=BindingContext.DeleteRatingCommand}"
                            CommandParameter="{Binding .}"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <Frame Grid.RowSpan="2"
               x:Name="NewReviewModal"
               IsVisible="{Binding IsReviewModalVisible}"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"
               BackgroundColor="#80000000"
               Padding="30">
            <Frame HorizontalOptions="Fill"
                   VerticalOptions="Center"
                   CornerRadius="15"
                   BackgroundColor="White"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Submit New Property Review" 
                           FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>

                    <Label Text="Property to Review:" FontAttributes="Bold"/>
                    <Picker ItemsSource="{Binding NewReviewData.AvailableProperties}"
                            SelectedItem="{Binding NewReviewData.SelectedProperty}"
                            ItemDisplayBinding="{Binding Address}"
                            Title="Select a property"/>

                    <Label Text="Your Rating:" FontAttributes="Bold"/>
                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Slider Minimum="1" Maximum="5" Value="{Binding NewReviewData.Rating}" WidthRequest="200" />
                        <Label Text="{Binding NewReviewData.Rating, StringFormat='{0} Stars'}" 
                               FontSize="16" FontAttributes="Bold" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <Label Text="Your Review:" FontAttributes="Bold"/>
                    <Editor Placeholder="Write your detailed review here..."
                            AutoSize="TextChanges"
                            HeightRequest="100"
                            Text="{Binding NewReviewData.ReviewText}"/>

                    <Grid ColumnDefinitions="*, *" ColumnSpacing="10" Margin="0, 10, 0, 0">
                        <Button Text="Cancel" 
                                Grid.Column="0" 
                                BackgroundColor="#DDDDDD" 
                                TextColor="#333333" 
                                Clicked="OnCancelReviewClicked"/>
                        <Button Text="Submit Review" 
                                Grid.Column="1" 
                                BackgroundColor="#4CAF50" 
                                TextColor="White" 
                                Clicked="OnSubmitReviewClicked"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>
        </Frame>

        <Frame Grid.RowSpan="2"
               x:Name="FullReviewModal"
               IsVisible="{Binding IsFullReviewModalVisible}"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"
               BackgroundColor="#80000000"
               Padding="30">

            <Frame x:DataType="local:PropertyRating"  
                   BindingContext="{Binding SelectedRating}" 
                   HorizontalOptions="Fill"
                   VerticalOptions="Center"
                   CornerRadius="15"
                   BackgroundColor="White"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="{Binding PropertyAddress}" 
                           FontSize="22" FontAttributes="Bold" HorizontalOptions="Center"/>

                    <Label Text="{Binding RatingText}"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#FFC107"
                           HorizontalOptions="Center"/>

                    <Label Text="{Binding Review}"
                           FontSize="16"
                           TextColor="#333333"/>

                    <Label Text="{Binding UserName, StringFormat='â€” Reviewed by {0}'}" 
                           FontSize="14" FontAttributes="Italic" TextColor="#888888" HorizontalOptions="End"/>

                    <Button Text="Close" 
                            BackgroundColor="#007BFF" 
                            TextColor="White" 
                            Clicked="OnCloseFullReviewModalClicked"/>
                </VerticalStackLayout>
            </Frame>
        </Frame>
    </Grid>
</ContentPage>