<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rentrey.Maui.TenancyApplicationPage"
             Title="Tenancy Application"
             Shell.NavBarIsVisible="True"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label Text="Tenancy Application" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

            <Frame CornerRadius="10" Padding="15" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Download the tenancy application PDF, fill it, and submit it below." FontSize="16"/>

                    <Button Text="Download PDF" 
                            FontSize="18" 
                            BackgroundColor="#FFA726" 
                            TextColor="White"
                            CornerRadius="10"
                            Clicked="OnDownloadPdfClicked"/>

                    <Button Text="Submit PDF" 
                            FontSize="18" 
                            BackgroundColor="#4CAF50" 
                            TextColor="White"
                            CornerRadius="10"
                            Clicked="OnSubmitPdfClicked"/>

                    <Label x:Name="PropertyLabel"
                           Text="{Binding Address}"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           Margin="0,20,0,10"/>     

                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>